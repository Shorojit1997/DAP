<%- include('../common/head') %>

    <div class="container">
        <%- include('../common/navbar') %>

            <!-- search time -->
            <div class="row m-3">
                <div class="card ps-1 pe-1 pt-4 pb-4 mb-3">
                    <div class="row">
                        <div class="col-2">
                            <img width="100px" style="border-radius: 50%;" height="100px" src="/images/searchDoctor.jpg"
                                alt="searchDoctor">
                        </div>
                        <div class="col-6">
                            <div class="d-flex w-100 flex-column align-items-start">
                                <p class="forName">
                                    <%= DoctorInfo.Name %>
                                </p>
                                <p class="forBody">
                                    <%= DoctorInfo._Option %>
                                </p>
                                <p class="forBody">Specializes in <%= DoctorInfo.Speciality %>
                                </p>
                                <!-- modal button  -->

                            </div>
                        </div>
                        <div class="col-4">
                            <div class="d-flex w-100 flex-column align-items-start">
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    5 Patient Feedback
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    2 Years experience
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    <%= DoctorInfo.VisitClinic %> at Clinic
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    <%= DoctorInfo.VisitOnline %> at Online
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


            <!-- most search topics -->
            <div class="row mt-3 mb-3">
                <div class="col-5">
                    <div class="lead m-2">
                        <h5>Personal Statement</h5>
                    </div>
                    <div class="card p-3" style="text-align: justify; font-size: 16px; max-height: 200px;">
                        <%=DoctorInfo.Bio%>

                    </div>


                    <div class="lead m-2">
                        <h5>Info</h5>
                    </div>
                    <div class="card">
                        <div class="card-body d-flex justify-content-center flex-column">
                            <!-- Speciality  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Speciality</p>
                            <div
                                style="text-align: justify;margin-left: 20px; font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo.Speciality %>
                            </div>

                            <!-- Threatment Area  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Threatment Area</p>
                            <div
                                style="text-align: justify; margin-left: 20px;font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo.treatmentAreas %>
                            </div>

                            <!-- Educations  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Educations </p>
                            <div
                                style="text-align: justify;margin-left: 20px; font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo._Option %>
                            </div>


                            <!-- Languages  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Languages </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Language %>
                            </div>

                            <!-- Awards  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Awards and Recognitions </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Awards %>
                            </div>

                            <!-- membership  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Professional Membership </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Membership %>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-7">
                    <div class="d-flex justify-content-center flex-column">
                        <div style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 22px; font-weight: 600;">
                            Your Strength</div>
                        <div>Based on patients Reviews</div>
                        <%- include('../common/ratingBar') %>
                    </div>


                </div>

            </div>
    </div>

    <%- include('../common/tail') %>
        </body>

        </html>