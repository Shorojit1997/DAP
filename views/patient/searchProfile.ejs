<%- include('../common/head') %>

    <div class="container">
        <%- include('../common/navbar') %>


            <!-- banner section  -->
            <div class="d-flex justify-content-center bg-dark">
                <div class="inner w-100">
                    <h1> <strong>SEARCH</strong></h1>
                    <form action="/doctor/search" method="get" class="d-flex w-75">
                        <input class="form-control me-2" type="search" placeholder="Search" name="search"
                            aria-label="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>
            </div>
            <!-- most search topics -->
            <div class="row mt-3 mb-3">
                <div class="col-3">
                    <div class="card">
                        <div class="card-header lead">
                            <h5>Filter</h5>
                        </div>
                        <div class="card-body d-flex justify-content-center flex-column">
                            <p class="lead">GENDER</p>
                            <div  class="form-check">
                                <input onclick="CheckBox(this,'Male')"  type="checkbox" class="form-check-input">
                                <label class="form-check-label">Male</label>
                            </div>
                            <div class="form-check">
                                <input onclick="CheckBox(this,'Female')" type="checkbox" class="form-check-input">
                                <label class="form-check-label">Female</label>
                            </div>
                            <div style="width: 100%;border-top: 1px solid gray;margin: 15px;"></div>
                            <p class="lead">SPECIALTY</p>
                            <div class="form-check">
                                <input onclick="CheckBox(this,'Urology')" type="checkbox" class="form-check-input">
                                <label class="form-check-label">Urology</label>
                            </div>
                            <div class="form-check">
                                <input onclick="CheckBox(this,'Kidney')" type="checkbox" class="form-check-input">
                                <label class="form-check-label">Kidney</label>
                            </div>

                        </div>
                    </div>
                </div>

                <!-- search time  -->
                <div id="filerDiv" class="col-9">
                    <% if (items.length) { items.forEach(element=> { %>

                        <div  class="card ps-1 pe-1 pt-4 pb-4 mb-3">
                            <div  class="row">
                                <div class="col-2">
                                    <img width="100px" style="border-radius: 50%;" height="100px"
                                        src="/images/searchDoctor.jpg" alt="searchDoctor">
                                </div>
                                <div class="col-6">
                                    <div class="d-flex w-100 flex-column align-items-start">
                                        <p class="forName"><%= element.Name %> </p>
                                        <p class="forBody"><%= element._Option  %> </p>
                                        <p class="forBody">Specializes in <%= element.Speciality  %>  </p>
                                    </div>
                                </div>
                                <div class="col-4">
                                    <div class="d-flex w-100 flex-column align-items-start">
                                        <p class="forBody">
                                            <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                            5 Patient Feedback
                                        </p>
                                        <p class="forBody">
                                            <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                            52 Years experience
                                        </p>
                                        <p class="forBody">
                                            <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                            <%= element.VisitClinic %>  at Clinic
                                        </p>
                                        <p class="forBody">
                                            <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                            <%= element.VisitOnline %>  at Online
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <div class="d-flex justify-content-center " style="font-size: 16px; color: blue;">
                               <a href="/doctor/view/<%=element.DoctorId %>">View Profile</a>
                            </div>
                        </div>
                        <%}); } else { %>
                            <div class="d-flex justify-content-center fw-bold" style="font-size: 35px;">No Doctor is found</div>
                       <% } %> 
                </div>

            </div>


    </div>
    </div>

    <%- include('../common/tail') %>
        </body>

        </html>