<%- include('../common/head') %>

    <div class="container">
        <%- include('../common/navbar') %>

            <!-- search time -->
            <div class="row m-3">
                <div class="card ps-1 pe-1 pt-4 pb-4 mb-3">
                    <div class="row">
                        <div class="col-2">
                            <img width="100px" style="border-radius: 50%;" height="100px" src="/images/searchDoctor.jpg"
                                alt="searchDoctor">
                        </div>
                        <div class="col-6">
                            <div class="d-flex w-100 flex-column align-items-start">
                                <p class="forName">
                                    <%= DoctorInfo.Name %>
                                </p>
                                <p class="forBody">
                                    <%= DoctorInfo._Option %>
                                </p>
                                <p class="forBody">Specializes in <%= DoctorInfo.Speciality %>
                                </p>
                                <!-- modal button  -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal"
                                    data-bs-target="#myModal"
                                    style="font-weight: bold; background-color: rgb(110, 110, 105); color: white; border: 1px solid white; padding: 5px 10px;">Request
                                    For Appointment</button>
                                <!-- The Modal -->
                                <div class="modal" id="myModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Health Query</h4>
                                                <button type="button" class="btn-close"
                                                    data-bs-dismiss="modal"></button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <form action="/appointment/<%=DoctorInfo.DoctorId%> " method="post">
                                                    <div class="mb-3">
                                                        <label for="problemStatement" class="form-label">Problem
                                                            Statement*: </label>
                                                        <textarea name="problemStatement" class="form-control"
                                                            id="problemStatement" rows="4"></textarea>
                                                    </div>

                                                    <div class="mb-3 mt-3">
                                                        <label for="visitAt" class="form-label">Visit At*:</label>
                                                        <select id="visitAt" required name="visitAt"
                                                            class="form-select form-select-lg mb-3"
                                                            aria-label=".form-select-lg example">
                                                            <option value="">Select</option>
                                                            <option value="Online">Online</option>
                                                            <option value="Clinic">Clinic</option>
                                                        </select>
                                                    </div>


                                                    <div class="mb-3 mt-3">
                                                        <label for="level" class="form-label">Emmergiency Level: (1 is
                                                            low 10 is
                                                            high) </label>
                                                        <select id="level" required name="level"
                                                            class="form-select form-select-lg mb-3"
                                                            aria-label=".form-select-lg example">
                                                            <option value="">Select</option>
                                                            <option value="1">1</option>
                                                            <option value="2">2</option>
                                                            <option value="3">3</option>
                                                            <option value="4">4</option>
                                                            <option value="5">5</option>
                                                            <option value="6">6</option>
                                                            <option value="7">6</option>
                                                            <option value="8">7</option>
                                                            <option value="8">8</option>
                                                            <option value="9">9</option>
                                                            <option value="10">10</option>
                                                        </select>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Submit</button>
                                                </form>
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger"
                                                    data-bs-dismiss="modal">Close</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                        <div class="col-4">
                            <div class="d-flex w-100 flex-column align-items-start">
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    <%=Total%> Patient Feedback
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    2 Years experience
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    <%= DoctorInfo.VisitClinic %> at Clinic
                                </p>
                                <p class="forBody">
                                    <i class='fa fa-check-circle ' style='font-size:18px;color:green;'></i>
                                    <%= DoctorInfo.VisitOnline %> at Online
                                </p>
                            </div>
                        </div>
                    </div>

                </div>
            </div>


            <!-- most search topics -->
            <div class="row mt-3 mb-3">
                <div class="col-5">
                    <div class="lead m-2">
                        <h5>Personal Statement</h5>
                    </div>
                    <div class="card p-3" style="text-align: justify; font-size: 16px; max-height: 200px;">
                        <%=DoctorInfo.Bio%>

                    </div>


                    <div class="lead m-2">
                        <h5>Info</h5>
                    </div>
                    <div class="card">
                        <div class="card-body d-flex justify-content-center flex-column">
                            <!-- Speciality  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Speciality</p>
                            <div
                                style="text-align: justify;margin-left: 20px; font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo.Speciality %>
                            </div>

                            <!-- Threatment Area  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Threatment Area</p>
                            <div
                                style="text-align: justify; margin-left: 20px;font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo.treatmentAreas %>
                            </div>

                            <!-- Educations  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Educations </p>
                            <div
                                style="text-align: justify;margin-left: 20px; font-size: 14px; max-height: 200px;margin-bottom: 10px;">
                                <%= DoctorInfo._Option %>
                            </div>


                            <!-- Languages  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Languages </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Language %>
                            </div>

                            <!-- Awards  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Awards and Recognitions </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Awards %>
                            </div>

                            <!-- membership  -->
                            <p style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 18px; font-weight: 400;">
                                ⇒Professional Membership </p>
                            <div
                                style="text-align: justify; margin-left: 20px; font-size: 14px; max-height: 200px; margin-bottom: 10px;">
                                <%= DoctorInfo.Membership %>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col-7">
                    <div class="d-flex justify-content-center flex-column">
                        <div style="border-bottom: 1px solid rgb(212, 210, 210); font-size: 22px; font-weight: 600;">
                            Special Tallent</div>
                        <div>Based on patients Reviews</div>
                        <%- include('../common/ratingBar') %>
                    </div>


                </div>

            </div>
    </div>

    <%- include('../common/tail') %>
        </body>

        </html>